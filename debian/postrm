#!/bin/sh
set -e

case "$1" in
    purge)
        # Remove configuration directory if purging
        if [ -d /etc/firmwareguard ]; then
            rm -rf /etc/firmwareguard || true
        fi

        # Reload systemd
        if [ -d /run/systemd/system ]; then
            systemctl daemon-reload || true
        fi
        ;;

    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        # Reload systemd on remove
        if [ -d /run/systemd/system ]; then
            systemctl daemon-reload || true
        fi
        ;;
esac

#DEBHELPER#

exit 0
